<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.csis.lab04.MainActivity">


    <TextView
        android:text="Played Frequency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_below="@+id/counter"
        android:layout_alignStart="@+id/counter"
        android:layout_marginTop="17dp" />

    <TextView
        android:text="FREQUENCY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:id="@+id/frequency" />

    <Switch
        android:text="reverse counting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/onOffSwitch"
        android:layout_alignEnd="@+id/onOffSwitch"
        android:id="@+id/reverseSwitch" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COUNTER VALUE"
        android:id="@+id/counter"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/reverseSwitch"
        android:layout_centerHorizontal="true" />

    <Switch
        android:text="Start/Stopp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:id="@+id/onOffSwitch"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/counter" />

    <TextView
        android:text="Volume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_below="@+id/frequency"
        android:layout_alignEnd="@+id/frequency"
        android:layout_marginTop="34dp" />

    <Button
        android:text="Stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/songOnOff"
        android:layout_toEndOf="@+id/playButton"
        android:id="@+id/stopButton" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/playButton"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView4" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:id="@+id/slider2"
        android:layout_alignParentEnd="true"
        android:max="100" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/slider1"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Switch
        android:text="enable music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:id="@+id/songOnOff"
        android:layout_below="@+id/slider1"
        android:layout_alignEnd="@+id/counter" />

    <Button
        android:text="Play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/playButton"
        android:layout_below="@+id/songOnOff"
        android:layout_alignStart="@+id/reverseSwitch" />

</RelativeLayout>
